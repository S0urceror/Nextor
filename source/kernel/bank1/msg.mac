warn	macro	text
	 if1
	  .printx % text
	 endif
	endm
;
;
err	macro	code,text
	 local	 start,length
	 defb	 code&##
	 defb	 length
start:	 defb	 text
	 defb	 0
length	 equ	 $-start
	 if1
	  if	  length gt 64
	   warn    <Error message for '&code' is too long>
	  endif
	 endif
	endm
